{
  "name": "water_me",
  "version": "0.1.0",
  "main": "index.js",
  "homepage": "https://watermeapp.herokuapp.com/",
  "private": true,
  "dependencies": {},
  "scripts": {
    "startFrontend": "cd frontend && npm run startReact",
    "startBackend": "cd backend && npm run mon",
    "testFrontend": "cd frontend && npm run test",
    "testFrontend-coverage": "cd frontend && npm run test-coverage",
    "dev": "concurrently -n express,startReact -k \"cd backend && npm run mon\" \"cd frontend && npm run startReact\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": "^12.16.0"
  },
  "devDependencies": {
    "concurrently": "^5.3.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/src/frontend/Utils/generateAuthTokenForExternalUser.js",
      "!<rootDir>/src/backend/**"
    ],
    "coverageReporters": [
      "json",
      "html",
      "text"
    ]
  }
}
